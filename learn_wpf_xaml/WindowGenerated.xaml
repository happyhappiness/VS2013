<Window x:Class="learn_wpf_xaml.WindowGenerated"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local ="clr-namespace:learn_wpf_xaml"
        Title="{x:Static Member=local:WindowGenerated.title}" Height="300" Width="300">
    <StackPanel>
        <Button Content="第一个"/>
        <Button Content="第二个"/>
        <Button Content="第三个"/>
        <Button Content="第四个" Style="{x:Null}"/>
        <ListBox Margin="5">
            <ListBox.ItemsSource>
                <x:Array Type="{x:Type sys:String}">
                    <sys:String>"嘿嘿"</sys:String>
                    <sys:String>"嘻嘻"</sys:String>
                    <sys:String>"哈哈"</sys:String>
                    <sys:String>"你是不是傻"</sys:String>
                </x:Array>
            </ListBox.ItemsSource>
        </ListBox>
    </StackPanel>
    <Window.Resources>
        <Style x:Key="{x:Type TypeName=Button}" TargetType="{x:Type TypeName=Button }">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
</Window>
