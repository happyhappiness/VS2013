<Window x:Class="learn_wpf_xaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local ="clr-namespace:learn_wpf_xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <local:MyButton windowGenerated="{x:Type TypeName=local:WindowGenerated }" Height="20" Grid.Row="0" Margin="5" Content ="我是按钮，快点我" Background="#FFE86464" />
        <Ellipse Height="100" Width="100" Grid.Row="1" Margin="5">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.25,0.25" RadiusX="0.75" RadiusY="0.75">
                    <RadialGradientBrush.GradientStops>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Black" Offset="0.65"/>
                        <GradientStop Color="Gray" Offset="0.8"/>
                    </RadialGradientBrush.GradientStops>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>

    <Window.Resources>
        <local:Human x:Key="human" child="你还有很多路要走"/>
    </Window.Resources>
</Window>
